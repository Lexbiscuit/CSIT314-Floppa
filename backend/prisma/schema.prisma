generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Accounts {
  id                Int        @id @default(autoincrement())
  name              String
  password          String
  DOB               DateTime
  profile           Profiles    @relation(fields: [profileId], references: [id])
  work_availability DateTime[]
  profileId         Int

  @@index([profileId])
}

model Profiles {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  Accounts     Accounts[]
}
